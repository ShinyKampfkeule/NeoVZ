<br>
<br>
<table>
    <tr>
        <th>Personal ID</th>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Geburtsdatum</th>
        <th>Abteilung</th>
        <th>Position</th>
        <th>Optionen</th>
    </tr>
    {{#each persons}}
        <form>
            <tr>
                <input type="hidden" name="id" value="{{this.id}}">
                <td>{{this.personalid}}<input type="hidden" name="personalid" value="{{this.personalid}}"></td>
                <td>{{this.forename}}<input type="hidden" name="forename" value="{{this.forename}}"></td>
                <td>{{this.surname}}<input type="hidden" name="surname" value="{{this.surname}}"></td>
                <td>{{this.dateOfBirth}}<input type="hidden" name="dateOfBirth" value="{{this.dateOfBirth}}"></td>
                <td>{{this.department}}<input type="hidden" name="department" value="{{this.department}}"></td>
                <td>{{this.position}}<input type="hidden" name="position" value="{{this.position}}"></td>
                <td><button type="submit" formaction="/edit" formmethod="post">Edit</button><button type="submit" formaction="/delete" formmethod="post">Delete</button></td>
            </tr>
        </form>
    {{/each}}
</table>
